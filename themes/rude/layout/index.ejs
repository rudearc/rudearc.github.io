<div class="bio mt-1">
    <h2 class="greeting"><% if (config.greeting){ %><%= config.greeting %><% } %></h2>
    <p class="description"><% if (config.description){ %><%= config.description %><% } %></p>
</div>

<h3>Recent Posts</h3>

<% site.posts.sort('date', 'desc').limit(theme.max_post).forEach(function(post){ %>
<div class="row">

  <div class="col-sm">
    <p class="bottom"><%- full_date(post.date, 'll') %></p>
  </div>
  <div class="col-sm">
    <a href="<%- url_for(post.path) %>" >
      <% if (post.title == "") { %>
        no title
      <% } else { %>
        <%- post.title %>
      <% } %>
    </a>
  </div>
</div>
<% }) %>